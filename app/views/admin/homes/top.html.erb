<div class="col-md-8 offset-md-1">
<h2>注文履歴一覧</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>ステータス</th>
      <th colspan="4"></th>
    </tr>
  </thead>
<tbody>
  <% @orders.each do |order| %>
 <tr>
  <td><%= link_to order.created_at, admin_order_history_path(order.id) %> </td>
  <td><%= order.customer.full_name %> </td>
  <% @sum = 0 %>
  <% order.order_details.each do |order_detail|  %>
  <% @sum += order_detail.amount %>
  <% end %>
  <td><%= @sum %></td>
  <td><%= order.status %> </td>

 </tr>
 <% end %>
</tbody>
</table>
</div>

