<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
<div class="form-group">
  <label for="genre-body">ジャンル名</label>
    <%= f.text_area :name %>
    </div>
    <div class="form-group">
    <input type="submit" name="commit" value="新規登録" class="btn btn-success" data-disable-with="Create Book">
  </div>
    <%  end %>

<div class="col-md-8 offset-md-1">
  <h1>ジャンル編集</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


