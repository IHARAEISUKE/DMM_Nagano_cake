<h2>商品編集</h2>
<%= form_with model: @item, url: admin_item_path, local:true do |f| %>

<div class="form-group">
  <label for="item-image">商品画像</label>
     <%= f.file_field :image %>
    </div>
    <div class="form-group">
    <label for="item-name">商品名</label>
      <%= f.text_area :name %>
    </div>

    <div class="form-group">
    <label for="item-introduction">商品説明</label>
      <%= f.text_area :introduction %>
    </div>

    <div class="form-group">
      <label for="item-genre">ジャンル</label>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
    </div>

    <div class="form-group">
    <label for="item-price">税抜価格</label>
      <%= f.text_area :price %>
    </div>

    <div class="form-group">
    <label for="item-name">販売ステータス</label>
     <%= f.label :is_active, '販売中' %>
     <%= f.radio_button :is_active, true %>

     <%= f.label :is_active, '販売停止中' %>
     <%= f.radio_button :is_active, false %>
    </div>

    <div class="form-group">
    <input type="submit" name="commit" value="変更を保存" class="btn btn-success" data-disable-with="Create Book">
  </div>
    <%  end %>