<div class="col-md-8 offset-md-1">
<h2>商品一覧</h2>

<%=link_to '新規登録', new_admin_item_path %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="5"></th>
    </tr>
  </thead>
<tbody>
  <% @items.each do |item| %>
 <tr>
  <td><%=  item.id %></td>
  <td><%= link_to item.name, admin_item_path(item.id) %> </td>
  <td><%= item.price %> </td>
  <td><%= item.genre.name %> </td>
  <td><%= item.is_active ? "販売中" : "販売停止中" %> </td>

 </tr>
 <% end %>
</tbody>
</table>
</div>