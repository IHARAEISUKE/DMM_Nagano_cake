<div class="col-md-8 offset-md-1">
  <h2>注文履歴一覧</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><div><%= order.shipping_postal_code %></div>
            <div><%= order.shipping_address %></div>
            <div><%= order.shipping_name %></div></td>
         <td><% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
            <%end%></td>
         <td><%= order.payment %></td>
        <td><%= order.status %></td>
        <td><%= link_to '表示する', order_history_path(order.id), class:"btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
