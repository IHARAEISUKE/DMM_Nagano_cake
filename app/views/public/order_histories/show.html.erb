<h2>注文履歴詳細</h2>

<table class=table2>
  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.updated_at %></td>
    </tr>
      <tr>
      <td>配送先</td>
      <td><%= @order.shipping_postal_code %><br><%= @order.shipping_address %><br><%= @order.shipping_name %>  </td>
    </tr>
      <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    　<tr>
      <td>ステータス</td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

  <div class="col-md-8 offset-md-1">
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
      <th colspan="4"></th>
    </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.item.name %></td>
        <td><%= order.item.add_tax_price %></td>
        <td><%= order.amount %></td>
        <td><%= (order.item.add_tax_price*order.amount)%></td>
      </tr>
      <% @sum += (order.item.add_tax_price*order.amount) %>
      <% end  %>
  </tbody>
</table>
</div>

<table class=table2>
  <tbody>
    <tr>
      <td>送料</td>
      <td><%=@order.postage%></td>
    </tr>
      <tr>
      <td>商品合計</td>
      <td><%= @sum %></td>
    </tr>
      <tr>
      <td>請求金額</td>
      <td><%= @order.postage.to_i + @sum.to_i %></td>
    </tr>
  </tbody>
</table>
