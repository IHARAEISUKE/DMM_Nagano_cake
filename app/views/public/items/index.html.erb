<h2>商品一覧</h2>

<%  @items.each do |item|  %>
<% if item.is_active == true %>
<%= link_to item_path(item.id) do %>
<%= image_tag item.image, size: "100x100" %>
<% end %>
<p>商品名:<%= item.name %></p>
<p>税込価格<br>(税抜価格):<%= item.add_tax_price.to_s(:dalimited) %>(<%= item.price %>)</p>
<% end %>
<% end %>

