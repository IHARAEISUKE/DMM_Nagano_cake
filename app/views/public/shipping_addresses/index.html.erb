
<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: shipping_addresses_path, local:true do |f| %>
<div class="form-group">
  <label for="postal_code">郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code %>
</div>

<div class="form-group">
  <label for="address">住所</label>
  <%= f.text_field :address %>
</div>

<div class="form-group">
  <label for="name">宛名</label>
  <%= f.text_field :name %>
</div>
 <%= f.submit "新規登録", class:'btn btn-info' %>
<% end %>

<div class="col-md-8 offset-md-1">
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to '編集する', edit_shipping_address_path(address), class:"btn btn-sm btn-success" %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>